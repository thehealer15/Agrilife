<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Insurance_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="23dp">

            <TextView
                android:id="@+id/policyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />
            <TextView
                android:id="@+id/policyDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                /><TextView
            android:id="@+id/policyCover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            /><TextView
            android:id="@+id/targetEntity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            /><TextView
            android:id="@+id/premiumLowerBound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            /><TextView
            android:id="@+id/claimSettlementRatio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            /><TextView
            android:id="@+id/amountSettlementRatio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            /><TextView
            android:id="@+id/planid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            /><TextView
            android:id="@+id/waitingPeriodInDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            /><TextView
            android:id="@+id/noClaimBonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

            <TextView
                android:id="@+id/alreadyApplied"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have Already Applied for this policy"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_marginTop="30dp"
                android:visibility="invisible" />
            <Button

                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/apply"
                    android:text="Apply For Policy "
                    android:backgroundTint="@color/dark_blue"
                    app:rippleColor="@color/ripple_effect"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
