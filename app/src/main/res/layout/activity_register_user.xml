<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_weight="0.25"
            android:layout_height="0dp"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="AgriLife"
            android:textColor="#ffffff"
            android:textSize="35sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_action_per"
        android:ems="10"
        android:hint="Name "
        android:textColorHint="#5C5656"
        android:paddingLeft="10dp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Email"
        android:textColor="@color/white"
        android:textColorHint="#5C5656"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/phoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_action_per"
        android:ems="10"
        android:hint="Phone Number"
        android:textColorHint="#5C5656"
        android:paddingLeft="10dp"
        android:textColor="@color/white" />
    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:inputType="textCapWords"

        android:drawableLeft="@drawable/ic_action_per"
        android:ems="10"
        android:hint=" Address"
        android:textColorHint="#5C5656"
        android:paddingLeft="10dp"
        android:textColor="@color/white" />

        <EditText
            android:id="@+id/edittextdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:inputType="textCapWords"

            android:drawableLeft="@drawable/ic_action_per"
            android:ems="10"
            android:hint=" Description "
            android:textColorHint="#5C5656"
            android:paddingLeft="10dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/edittextsector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:inputType="textCapWords"

            android:drawableLeft="@drawable/ic_action_per"
            android:ems="10"
            android:hint=" Sector "
            android:textColorHint="#5C5656"
            android:paddingLeft="10dp"
            android:textColor="@color/white" />


        <EditText
            android:id="@+id/edittextaadharcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:inputType="textCapWords"

            android:drawableLeft="@drawable/ic_action_per"
            android:ems="10"
            android:hint="Aadhar Card Number"
            android:textColorHint="#5C5656"
            android:paddingLeft="10dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/edittextaccountno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:inputType="textCapWords"

            android:drawableLeft="@drawable/ic_action_per"
            android:ems="10"
            android:hint="Bank Account Number"
            android:textColorHint="#5C5656"
            android:paddingLeft="10dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/edittextifsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:inputType="textCapWords"

            android:drawableLeft="@drawable/ic_action_per"
            android:ems="10"
            android:hint="Bank Account Number"
            android:textColorHint="#5C5656"
            android:paddingLeft="10dp"
            android:textColor="@color/white" />



        <EditText
        android:id="@+id/password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="#5C5656"
        android:paddingLeft="10dp" />



    <EditText
        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Confirm Password"
        android:textColorHint="#5C5656"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_weight="0.25"
        android:layout_height="0dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:text="Register" />

    </LinearLayout>


</ScrollView>